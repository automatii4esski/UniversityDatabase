@model UniversityDatabase.ViewModels.Student.StudentCreateViewModel;

<h2 class="info-title">Создать Студента</h2>
    <hr />
        <form class="form form-create" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Student.Name" class="control-label">Имя</label>
                <input  asp-for="Student.Name" class="form-control" />
                <span asp-validation-for="Student.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Surname" class="control-label">Фамилия</label>
                <input asp-for="Student.Surname" class="form-control" />
                <span asp-validation-for="Student.Surname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Student.Patronymic" class="control-label">Отчество</label>
                <input asp-for="Student.Patronymic" class="form-control" />
                <span asp-validation-for="Student.Patronymic" class="text-danger"></span>
            </div>

            <div class="form-group">
                         <div class="control-label">Пол
                        <br />
                        @foreach (var sex in Model.SexOptions)
                        {
                                  <label asp-for="Student.SexId" class="control-label">
                                      @sex.Value
                                           <input asp-for="Student.SexId" value="@sex.Key" type="radio"/>
                                  </label>
                        }
                        </div>
                <span asp-validation-for="Student.SexId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Student.DateOfBirth" class="control-label">Дата рождения</label>
                <input value="@(new DateTime(DateTime.Now.Year - 18, 1, 1).ToString("yyyy-MM-dd"))" type="date" asp-for="Student.DateOfBirth" class="form-control" />
                <span asp-validation-for="Student.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.StudyGroupId" class="control-label">Учебная группа</label>
                <select class="form-select" asp-for="Student.StudyGroupId">
                    <option hidden selected value="">Select</option>

            @foreach (var studyGroup in Model.StudyGroupOptions)
            {

                <option value="@studyGroup.Key" >@studyGroup.Value</option>
            }
                </select>
                <span asp-validation-for="Student.StudyGroupId" class="text-danger"></span>
            </div>

            <div style="margin-top:10px;" class="form-group box">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
