@model UniversityDatabase.ViewModels.Student.StudentCreateViewModel;

<section class="form-section section">
    <div class="container">
        <div class="form-section-inner">
            <div class="form-section-head">
                <h1 class="form-section-title">Редактировать Студента</h1>
                <a class="form-section-back" asp-action="Index">Вернуться</a>
            </div>

            <form class="form form-create" asp-action="Edit">
             <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Student.Id" />
            <input type="hidden" asp-for="Student.PhotoUrl" />

                 <div class="form-group">
                    <label class="form-group__label">
                        <h3 class="form-group__title">Имя</h3>
                    <input value="@Model.Student.Name" placeholder="Введите имя" asp-for="Student.Name" class="form-control" />
                    </label>
                    <span asp-validation-for="Student.Name" class="form-group-danger"></span>
                </div>

                 <div class="form-group">
                    <label class="form-group__label">
                        <h3 class="form-group__title">Фамилия</h3>
                    <input value="@Model.Student.Surname" placeholder="Введите фамилию" asp-for="Student.Surname" class="form-control" />
                    </label>
                    <span asp-validation-for="Student.Surname" class="form-group-danger"></span>
                </div>

                 <div class="form-group">
                    <label class="form-group__label">
                        <h3 class="form-group__title">Отчество</h3>
                    <input value="@Model.Student.Patronymic" placeholder="Введите отчество" asp-for="Student.Patronymic" class="form-control" />
                    </label>
                    <span asp-validation-for="Student.Patronymic" class="form-group-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-group__label">
                        <h3 class="form-group__title">Пол</h3>
                            <div class="form-group__radio-wrapper">
                            @foreach (var sex in Model.SexOptions)
                            {
                                              <label class="form-group__radio-label">
                                    @sex.Value
                                                   <input asp-for="Student.SexId" value="@sex.Key" type="radio"/>
                                          </label>
                            }
                            </div>

                    </label>
                <span asp-validation-for="Student.SexId"  class="form-group-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-group__label">
                        <h3 class="form-group__title">Дата рождения</h3>
                                    <input type="date" asp-for="Student.DateOfBirth" class="form-control" />
                    </label>
                    <span asp-validation-for="Student.DateOfBirth" class="form-group-danger"></span>
                </div>

                 <div class="form-group">
                    <label class="form-group__label">
                        <h3 class="form-group__title">Учебная группа</h3>
                                   <select class="form-control form-select" asp-for="Student.StudyGroupId">
                    <option hidden selected value="">Select</option>

                            @foreach (var studyGroup in Model.StudyGroupOptions)
                            {

                        <option value="@studyGroup.Key" >@studyGroup.Value</option>
                            }
                </select>
                    </label>
                    <span asp-validation-for="Student.StudyGroupId" class="form-group-danger"></span>
                </div>

            <div class="form-section__submit-wrapper">
                <button type="submit" class="form-section__submit-btn">Сохранить</button>
            </div>
        </form>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
