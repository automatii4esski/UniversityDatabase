@model UniversityDatabase.ViewModels.Faculty.FacultyCreateViewModel

<section class="form-section section">
    <div class="container">
        <div class="form-section-inner">
            <div class="form-section-head">
                <h1 class="form-section-title">Редактировать Факультет</h1>
                <a class="form-section-back" asp-action="Index">Вернуться</a>
            </div>
            <form class="form form-create" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input value="@Model.Faculty.Id" type="hidden" asp-for="Faculty.Id" />
                 <div class="form-group">
                    <label class="form-group__label">
                        <h3 class="form-group__title">Название</h3>
                    <input value="@Model.Faculty.Name" placeholder="Введите название" asp-for="Faculty.Name" class="form-control" />
                    </label>
                    <span asp-validation-for="Faculty.Name" class="form-group-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-group__label">
                        <h3 class="form-group__title">Телефон</h3>
                    <input value="@Model.Faculty.Phone" placeholder="Введите телефон" asp-for="Faculty.Phone" class="form-control" />
                    </label>
                <span asp-validation-for="Faculty.Phone" class="form-group-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-group__label">
                        <h3 class="form-group__title">Деканат</h3>
                    <select class="form-control form-select" asp-for="Faculty.DeanId">
                    <option hidden selected value="">Select</option>

                            @foreach (var dean in Model.DeansOptions)
                            {
                                if (Model.Faculty.DeanId == dean.Key)
                                {
                                        <option selected value="@dean.Key" >@dean.Value</option>
                                }
                                else
                                {
                                         <option value="@dean.Key" >@dean.Value</option>
                                }
                            }
                </select>
                    </label>
                <span asp-validation-for="Faculty.DeanId"  class="form-group-danger"></span>
                </div>

            <div class="form-section__submit-wrapper">
                <button type="submit" class="form-section__submit-btn">Сохранить</button>
            </div>
        </form>
        </div>
    </div>
</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
