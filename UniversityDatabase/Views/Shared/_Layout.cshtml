<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UniversityDatabase</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UniversityDatabase.styles.css" asp-append-version="true" />
</head>
<body>
    @if(TempData["error"] != null){
        <div class="alert">@TempData["error"]</div>
    }
    <header class="header">
        <div class="container">
            <nav class="nav">
                <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">
                    <img asp-append-version class="logo__img" src="~/content/logo.svg"/>
                </a>
                    <ul class="nav__list">
                        <li class="nav__item">
                            <a class="nav__link" asp-area="" asp-controller="Dean" asp-action="Index">Деканаты</a>
                        </li>
                        <li class="nav__item">
                            <a class="nav__link" asp-area="" asp-controller="Faculty" asp-action="Index">Факультеты</a>
                        </li>
                        <li class="nav__item">
                            <a class="nav__link" asp-area="" asp-controller="Department" asp-action="Index">Кафедры</a>
                        </li>
                        <li class="nav__item">
                            <a class="nav__link" asp-area="" asp-controller="StudyGroup" asp-action="Index">Учебные группы</a>
                        </li>
                        <li class="nav__item">
                            <a class="nav__link" asp-area="" asp-controller="Student" asp-action="Index">Студенты</a>
                        </li>
                        <li class="nav__item">
                            <a class="nav__link" asp-area="" asp-controller="Teacher" asp-action="Index">Преподаватели</a>
                        </li>
                        <li class="nav__item">
                            <a class="nav__link" asp-area="" asp-controller="StudyPlan" asp-action="Index">Учебный план</a>
                        </li>
                        <li class="nav__item">
                            <a class="nav__link" asp-area="" asp-controller="StudentGrade" asp-action="Index">Оценки</a>
                        </li>
                        <li class="nav__item">
                            <a class="nav__link" asp-area="" asp-controller="Workload" asp-action="Index">Нагрузка</a>
                        </li>
                    </ul>
        </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            &copy; 2023 - UniversityDatabase
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
