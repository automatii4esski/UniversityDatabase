@model UniversityDatabase.ViewModels.Teacher.TeacherCreateViewModel;

<section class="form-section section">
    <div class="container">
        <div class="form-section-inner">
            <div class="form-section-head">
                <h1 class="form-section-title">Редактировать Преподавателя</h1>
                <a class="form-section-back" asp-action="Details" asp-route-id="@Model.Teacher.Id">Вернуться</a>
            </div>

            <form class="form form-create" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Teacher.Id" />
            <input type="hidden" asp-for="Teacher.PhotoUrl" />

                 <div class="form-group">
                    <label class="form-group__label">
                        <h3 class="form-group__title">Имя</h3>
                    <input value="@Model.Teacher.Name" placeholder="Введите имя" asp-for="Teacher.Name" class="form-control" />
                    </label>
                    <span asp-validation-for="Teacher.Name" class="form-group-danger"></span>
                </div>

                 <div class="form-group">
                    <label class="form-group__label">
                        <h3 class="form-group__title">Фамилия</h3>
                    <input value="@Model.Teacher.Surname" placeholder="Введите фамилию" asp-for="Teacher.Surname" class="form-control" />
                    </label>
                    <span asp-validation-for="Teacher.Surname" class="form-group-danger"></span>
                </div>

                 <div class="form-group">
                    <label class="form-group__label">
                        <h3 class="form-group__title">Отчество</h3>
                    <input value="@Model.Teacher.Patronymic" placeholder="Введите отчество" asp-for="Teacher.Patronymic" class="form-control" />
                    </label>
                    <span asp-validation-for="Teacher.Patronymic" class="form-group-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-group__label">
                        <h3 class="form-group__title">Пол</h3>
                            <div class="form-group__radio-wrapper">
                            @foreach (var sex in Model.SexOptions)
                            {
                                                  <label class="form-group__radio-label">
                                    @sex.Value
                                                           <input asp-for="Teacher.SexId" value="@sex.Key" type="radio"/>
                                              </label>
                            }
                            </div>

                    </label>
                <span asp-validation-for="Teacher.SexId"  class="form-group-danger"></span>
                </div>

                 <div class="form-group">
                    <label class="form-group__label">
                        <h3 class="form-group__title">Зарплата</h3>
                    <input type="number" min="0" asp-for="Teacher.Salary" class="form-control" />
                    </label>
                    <span asp-validation-for="Teacher.Salary" class="form-group-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-group__label">
                        <h3 class="form-group__title">Дата рождения</h3>
                                    <input type="date" asp-for="Teacher.DateOfBirth" class="form-control" />
                    </label>
                    <span asp-validation-for="Teacher.DateOfBirth" class="form-group-danger"></span>
                </div>

                 <div class="form-group">
                    <label class="form-group__label">
                        <h3 class="form-group__title">Должность</h3>
                <select class="form-select form-control" asp-for="Teacher.TeacherPositionId">
                    <option hidden selected value="">Select</option>

                            @foreach (var teacherPosition in Model.TeacherPositionOptions)
                            {

                                <option value="@teacherPosition.Key" >@teacherPosition.Value</option>
                            }
                </select>
                    </label>
                    <span asp-validation-for="Teacher.TeacherPositionId" class="form-group-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-group__label">
                        <h3 class="form-group__title">Кафедра</h3>
                <select class="form-select form-control" asp-for="Teacher.DepartmentId">
                    <option hidden selected value="">Select</option>

                            @foreach (var department in Model.DepartmentOptions)
                            {

                        <option value="@department.Key" >@department.Value</option>
                            }
                </select>
                    </label>
                    <span asp-validation-for="Teacher.DepartmentId" class="form-group-danger"></span>
                </div>

            <div class="form-section__submit-wrapper">
                <button type="submit" class="form-section__submit-btn">Сохранить</button>
            </div>
        </form>
        </div>
    </div>
</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
