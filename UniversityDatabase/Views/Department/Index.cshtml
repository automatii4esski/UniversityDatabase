@model UniversityDatabase.ViewModels.Department.DepartmentIndexViewModel;


<section class="department section">
    <div class="section__head">
        <h2 class="title">Кафедры</h2>
    </div>
    <div class="box">
        <a class="create-btn" asp-action="Create">Создать кафедру</a>
    </div>


    <div class="dean__content">
        @foreach (var department in Model.Departments)
        {
                <div class="item">
                    <h3 class="item-title">
                    @department.Name
                    </h3>
                            <div class="item-info"> <span class="item-info-title">Телефон: </span> @department.Phone</div>
                            <div class="item-info"> <span class="item-info-title">Факультет: </span> @department.Faculty.Name</div>
                                <div class="item-info"> <span class="item-info-title">Деканат: </span> @department.Faculty.Dean.Name</div>
                        <div class="item-actions">
                                        <a asp-action="Edit" asp-route-id="@department.Id" class="edit-btn"> <span class="edit-btn-text">Изменить</span> <span class="edit-btn-span"></span></a>
                                            <form asp-route-id="@department.Id" asp-action="Delete">
                                                                <button type="submit" class="delete-btn">  <span class="delete-btn-text">Удалить</span> <span class="delete-btn-span"></span> </button>
                                        </form>
                                        </div>
                </div>
        }
    </div>
</section>

