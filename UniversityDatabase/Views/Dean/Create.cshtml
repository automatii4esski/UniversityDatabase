@model UniversityDatabase.ViewModels.Dean.DeanCreateViewModel

<section class="form-section section">
    <div class="container">
        <div class="form-section-inner">
            <div class="form-section-head">
                <h1 class="form-section-title">Создать Деканат</h1>
                <a class="form-section-back" asp-action="Index">Вернуться</a>
            </div>
            <form class="form form-create" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                 <div class="form-group">
                    <label class="form-group__label">
                        <h3 class="form-group__title">Название</h3>
                    <input value="@Model.Dean.Name" placeholder="Введите название" asp-for="Dean.Name" class="form-control" />
                    </label>
                    <span asp-validation-for="Dean.Name" class="form-group-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-group__label">
                        <h3 class="form-group__title">Телефон</h3>
                    <input value="@Model.Dean.Phone" placeholder="Введите телефон" asp-for="Dean.Phone" class="form-control" />
                    </label>
                <span asp-validation-for="Dean.Phone" class="form-group-danger"></span>
                </div>

            <div class="form-section__submit-wrapper">
                <button type="submit" class="form-section__submit-btn">Сохранить</button>
            </div>
        </form>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
