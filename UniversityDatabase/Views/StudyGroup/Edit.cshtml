@model UniversityDatabase.ViewModels.StudyGroup.StudyGroupCreateViewModel;

<section class="form-section section">
    <div class="container">
        <div class="form-section-inner">
            <div class="form-section-head">
                <h1 class="form-section-title">Редактировать Учебную группу</h1>
                <a class="form-section-back" asp-action="Index">Вернуться</a>
            </div>
            <form class="form form-create" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input value="@Model.StudyGroup.Id" type="hidden" asp-for="StudyGroup.Id" />
                 <div class="form-group">
                    <label class="form-group__label">
                        <h3 class="form-group__title">Название</h3>
                    <input value="@Model.StudyGroup.Name" placeholder="Введите название" asp-for="StudyGroup.Name" class="form-control" />
                    </label>
                    <span asp-validation-for="StudyGroup.Name" class="form-group-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-group__label">
                        <h3 class="form-group__title">Год набора</h3>
                        <input type="number" min="1900" value="@Model.StudyGroup.RecruitmentYear" asp-for="StudyGroup.RecruitmentYear" class="form-control" />
                    </label>
                <span asp-validation-for="StudyGroup.RecruitmentYear" class="form-group-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-group__label">
                        <h3 class="form-group__title">Факультет</h3>
                    <select class="form-control form-select" asp-for="StudyGroup.FacultyId">
                    <option hidden selected value="">Select</option>

                            @foreach (var faculty in Model.FacultyOptions)
                            {
                                if (Model.StudyGroup.FacultyId == faculty.Key)
                                {
                                       <option selected value="@faculty.Key" >@faculty.Value</option>
                                }
                                else
                                {
                                        <option value="@faculty.Key" >@faculty.Value</option>
                                }
                            }
                </select>
                    </label>
                <span asp-validation-for="StudyGroup.FacultyId" class="form-group-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-group__label">
                        <h3 class="form-group__title">Курс</h3>
                    <select class="form-control form-select" asp-for="StudyGroup.CourseId">
                   <option hidden selected value="">Select</option>

                            @foreach (var course in Model.CourseOptions)
                            {
                                if (Model.StudyGroup.CourseId == course.Key)
                                {
                                                       <option selected value="@course.Key" >@course.Value</option>
                                }
                                else
                                {
                                                        <option value="@course.Key" >@course.Value</option>
                                }
                            }
                </select>
                    </label>
                <span asp-validation-for="StudyGroup.CourseId" class="form-group-danger"></span>
                </div>

            <div class="form-section__submit-wrapper">
                <button type="submit" class="form-section__submit-btn">Сохранить</button>
            </div>
        </form>
        </div>
    </div>
</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
